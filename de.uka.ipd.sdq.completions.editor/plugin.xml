<plugin>


  <extension
    point = "org.eclipse.ui.newWizards">
    <category
      id = "org.eclipse.emf.ecore.Wizard.category.ID"
      name="%_UI_Wizard_category">
    </category>
    <wizard
      id = "de.uka.ipd.sdq.completions.presentation.CompletionsModelWizardID"
      name = "%_UI_CompletionsModelWizard_label"
      class = "de.uka.ipd.sdq.completions.presentation.CompletionsModelWizard"
      category = "org.eclipse.emf.ecore.Wizard.category.ID"
      icon = "icons/full/obj16/CompletionsModelFile.gif">
      <description>%_UI_CompletionsModelWizard_description</description>
      <selection class = "org.eclipse.core.resources.IResource" />
    </wizard>
  </extension>

  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "de.uka.ipd.sdq.completions.presentation.CompletionsEditorID"
        name = "%_UI_CompletionsEditor_label"
        icon = "icons/full/obj16/CompletionsModelFile.gif"
        extensions = "completions"
        class = "de.uka.ipd.sdq.completions.presentation.CompletionsEditor" 
        contributorClass="de.uka.ipd.sdq.completions.presentation.CompletionsActionBarContributor" >
    </editor>
  </extension>    
</plugin>
